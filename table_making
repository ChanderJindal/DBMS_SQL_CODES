create database class_1;


use class_1;


create table CLIENT_MASTER (
client_no CHAR(6) ,
 name VARCHAR(20) ,
 address1 VARCHAR(30) ,
 address2 VARCHAR(30) ,
 city VARCHAR(15) ,
 pincode int,
 state VARCHAR(18),
bal_due float
);

create table product_master(
production varchar(6),
description varchar(15),
profit_percentage float,
unit_measure varchar(10),
qty_on_hand int,
reorder_lvl int,
sell_price float,
cost_price float
);

create table sales_master(
saleman_no varchar(6),
salesman_name varchar(20),
address1 varchar(30),
address2 varchar(30),
city varchar(20),
pincode int,
state varchar(20),
sale_ammount float
);
// sales master with 3 useless new columns
